[Unit]
Description=Easyzap
After=network-online.target
Wants=network-online.target systemd-networkd-wait-online.service

StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
Restart=on-failure
RestartSec=5s
WorkingDirectory=/usr/local/easyzap
ExecStart=/usr/local/easyzap/easyzap -wadebug DEBUG

[Install]
WantedBy=multi-user.target
